<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_app_day"/>
        </shape>
    </item>
    <!-- Purple Blob (Top Left) -->
    <item android:top="-100dp" android:left="-100dp">
        <shape android:shape="oval">
            <gradient android:type="radial" android:gradientRadius="400dp"
                android:startColor="#40E9D5FF" android:endColor="#00E9D5FF"/>
            <size android:width="400dp" android:height="400dp"/>
        </shape>
    </item>
    <!-- Blue Blob (Bottom Right) -->
    <item android:bottom="-100dp" android:right="-100dp">
        <shape android:shape="oval">
            <gradient android:type="radial" android:gradientRadius="400dp"
                android:startColor="#40BAE6FD" android:endColor="#00BAE6FD"/>
            <size android:width="400dp" android:height="400dp"/>
        </shape>
    </item>
</layer-list>