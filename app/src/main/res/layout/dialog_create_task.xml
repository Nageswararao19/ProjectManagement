<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/status_blue_bg"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="New task"
        android:textColor="@color/text_primary_day"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task title"
        android:textColor="@color/text_primary_day"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etTaskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_status_badge"
        android:backgroundTint="@color/white"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:textColorHint="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/text_primary_day"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etTaskDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_status_badge"
        android:backgroundTint="@color/white"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:textColorHint="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assigning to"
        android:textColor="@color/text_primary_day"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etAssignedTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_status_badge"
        android:backgroundTint="@color/white"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:textColorHint="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Due date"
        android:textColor="@color/text_primary_day"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etDueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:background="@drawable/bg_status_badge"
        android:backgroundTint="@color/white"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:textColorHint="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textColor="@color/text_primary_day"
        android:textStyle="bold" />

    <AutoCompleteTextView
        android:id="@+id/actTaskStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="13dp"
        android:layout_marginTop="12dp"
        android:focusable="false"
        android:text="-- Select status --"
        android:paddingStart="16dp"
        android:paddingEnd="0dp"
        android:background="@drawable/bg_status_badge"
        android:backgroundTint="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="38dp"
            android:layout_marginEnd="10dp"
            app:cornerRadius="10dp"
            android:padding="0dp"
            android:text="CANCEL"
            android:textColor="@color/status_orange_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="38dp"
            app:cornerRadius="10dp"
            android:padding="0dp"
            android:text="CREATE"
            android:textColor="@color/status_emerald_text"/>
    </LinearLayout>

</LinearLayout>